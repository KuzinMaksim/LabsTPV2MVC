@model LabsTPV2._3.Models.ParishionerModel


@{
    ViewData["Title"] = "Result";
}

<h1>Result</h1>

<div>
    <h4>ParishionerModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        @{
            if (Model.ID.GetType() == typeof(int) && int.MaxValue > Model.ID && int.MinValue < Model.ID)
            {

                <dd class="col-sm-10">
                    @Model.ID
                </dd>
            }

            else
            {
                <dd class="col-sm-10">
               @Html.Raw($"The value {Model.ID} is not valid for ID")
                    </dd>
                    }
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Model.Name.ToLower()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sex)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sex)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {ID = Model.ID, Name= Model.Name, Surname= Model.Surname, BirthDate= (DateTime.Parse(Model.BirthDate.ToString())), Adress= Model.Adress, Sex= Model.Sex }) |
    <a asp-action="Index">Back to List</a>
</div>
